<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/colorSecondaryVariant</item>
        <item name="android:textColorHint">@color/colorSecondaryVariant</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <!-- region button style-->
    <style name="buttonStyleTransparent">
        <item name="android:background">@drawable/bg_ripple_bordered</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>