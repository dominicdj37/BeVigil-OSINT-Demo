<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/expandedSet"
        motion:constraintSetStart="@id/collapsedSet"
        motion:motionInterpolator="easeInOut"
        motion:duration="300">
        <OnSwipe
        motion:touchAnchorId="@+id/bottomBackground"
        motion:touchAnchorSide="top"
        motion:dragDirection="dragUp" />
       <KeyFrameSet>
           <KeyPosition
               motion:motionTarget="@+id/searchButton"
               motion:keyPositionType="parentRelative"
               motion:percentX=".5"
               motion:framePosition="90"/>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/collapsedSet">
        <Constraint
            android:id="@+id/backgroundView"
            android:layout_height="0dp"
            android:layout_width="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="0"/>

        <Constraint
            android:id="@+id/searchButton"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_100"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@id/dividerGuideline"
            motion:layout_constraintBottom_toBottomOf="@id/dividerGuideline"/>


        <Constraint
            android:id="@+id/dividerGuideline"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:orientation="horizontal"
            motion:layout_constraintGuide_percent=".5"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/expandedSet">
        <Constraint
            android:id="@+id/backgroundView"
            android:layout_height="0dp"
            android:layout_width="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="1"/>
        <Constraint
            android:id="@+id/searchButton"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            motion:pivotAnchor="parent"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@id/dividerGuideline"
            motion:layout_constraintBottom_toBottomOf="@id/dividerGuideline"/>
        <Constraint
            android:id="@+id/dividerGuideline"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:orientation="horizontal"
            motion:layout_constraintGuide_percent=".1"/>
    </ConstraintSet>
</MotionScene>